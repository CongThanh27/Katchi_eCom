<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGray"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".view.CartActivity">

        <Button
            android:id="@+id/btntienhanhdathang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EF4C4C"
            android:padding="5dp"
            android:text="TIẾN HÀNH ĐẶT HÀNG"
            android:textColor="#FDFDFD"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/loadingIndicator"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <TextView
            android:id="@+id/emptyCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen10dp"
            android:gravity="center"
            android:text="@string/don_t_let_go_your_shopping_habit"
            android:textColor="@color/vDarkGray"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/noBookmarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Giỏ hàng rỗng"
            android:textColor="@color/noBookmark"
            android:textSize="24sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsInCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/deal_background2"
            android:visibility="gone" />

    </LinearLayout>
</layout>